modules = ["python-3.11", "nodejs-20", "python3"]

[nix]
channel = "stable-24_05"
packages = ["zip", "unzip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "discord_bot_review"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BrotherOwl Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BrotherOwl Bot 24/7"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test TornAPI Playground"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Python Spy Bot"

[[workflows.workflow]]
name = "discord_bot_review"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ls -la && npm list || echo \"No packages installed yet\" && echo \"Bot structure:\" && find src -type f | sort"

[[workflows.workflow]]
name = "BrotherOwl Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install discord.js ws && node index.js"
waitForPort = 3000

[[workflows.workflow]]
name = "BrotherOwl Bot 24/7"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node index.js"
waitForPort = 3001

[[workflows.workflow]]
name = "Test TornAPI Playground"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node src/test_tornplayground.js"

[[workflows.workflow]]
name = "Python Spy Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd bot_package && python main.py"

[deployment]
run = ["sh", "-c", "npm install discord.js ws && node index.js"]

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3001
